from tkinter import *

root = Tk()
root.title('Project code tkinter')
root.geometry("400x400")

# Set up options for radio buttons
OPTIONS = [
    ("Import from a file","import"),
    ("Generate a random matrix","generate")
]

# Create a StringVar to store the selected option
matrix = StringVar()
matrix.set("Import from a file")

# Create radio buttons
for text, option in OPTIONS:
    Radiobutton(root, text=text, variable=matrix, value=option, font=("Arial", 12), fg='#333333').pack(anchor=N)

# Function to display entered information
def myGet():
    lbl = Label(root, text=e.get()+ "|" + t.get() +"|"+ g.get(), font=("Arial", 12), fg='#333333').pack()
    e.delete(0,END)
    t.delete(0,END)
    g.delete(0,END)

# Function to execute based on selected option
def clicked(value):
    if value == "import" :
        label1= Label(root, text="hello", font=("Arial", 12), fg='#333333').pack()
    elif value == "generate":
        # Display prompts and entry fields for matrix information
        myLabel1 = Label(root, text="Δώσε δίασταση του πίνακα (πχ.1000x1000)", font=("Arial", 12), fg='#333333').pack()
        global e
        e = Entry(root, font=("Arial", 12))
        e.pack()
        myLabel2 = Label(root, text="ναι ή οχι αν είναι διαγώνιο", font=("Arial", 12), fg='#333333').pack()
        global t
        t = Entry(root, font=("Arial", 12))
        t.pack()
        myLabel3 = Label(root, text="πλήθος μη μηδενικών στοιχείων", font=("Arial", 12), fg='#333333').pack()
        global g
        g = Entry(root, font=("Arial", 12))
        g.pack()
        # Create button to save matrix information
        myButton1 = Button(root, text="Save my choises", command=myGet, font=("Arial", 12), bg='#333333', fg='white').pack()

# Create "Run" button to execute clicked function
myButton = Button(root, text="Run", command=lambda:clicked(matrix.get()), font=("Arial", 12), bg='#333333', fg='white')
myButton.pack()

root.mainloop()
